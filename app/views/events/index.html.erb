<p>
  <%= form_for(@event) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :date %>
      <%= f.text_field :date %>

      <%= f.label :time %>
      <%= f.text_field :time %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.submit "Create my meetup"  %>
  <% end %>
</p>
